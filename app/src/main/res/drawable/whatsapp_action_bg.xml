<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">
    <item>
        <layer-list>
            <!-- Enhanced shadow for 4dp elevation -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#3A000000" />
                </shape>
            </item>

            <!-- Main button surface -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <selector>
                    <item android:state_pressed="true">
                        <shape android:shape="oval">
                            <gradient
                                android:startColor="#FF0F7A6E"
                                android:endColor="#FF0A6B5F"
                                android:angle="135" />
                            <stroke android:width="1dp" android:color="#FF1A8C7E" />
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="oval">
                            <gradient
                                android:startColor="#FF128C7E"
                                android:endColor="#FF0F7A6E"
                                android:angle="135" />
                            <stroke android:width="1dp" android:color="#FF1A9C8E" />
                        </shape>
                    </item>
                </selector>
            </item>
        </layer-list>
    </item>
</ripple>
