<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">

    <!-- Content -->
    <item>
        <selector>
            <!-- Pressed state - slightly lighter for visual feedback -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#FF434547" />
                    <corners android:radius="6dp" />
                    <stroke android:width="1dp" android:color="#FF535557" />
                </shape>
            </item>

            <!-- Normal state - your specified color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF343537" />
                    <corners android:radius="6dp" />
                    <stroke android:width="1dp" android:color="#FF444547" />
                </shape>
            </item>
        </selector>
    </item>

    <!-- Mask to bound the ripple effect to key shape -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</ripple>
