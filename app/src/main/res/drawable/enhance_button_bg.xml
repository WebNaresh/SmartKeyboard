<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF4285F4"
                android:endColor="#FF1A73E8"
                android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#FF1A73E8" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF4285F4"
                android:endColor="#FF1A73E8"
                android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#FF4285F4" />
        </shape>
    </item>
</selector>
