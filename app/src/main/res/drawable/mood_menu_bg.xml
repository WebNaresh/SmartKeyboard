<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer for elevation -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2A000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main dropdown surface -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF1B1B2F"
                android:endColor="#FF171729"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#FF2A2A3A" />
        </shape>
    </item>

</layer-list>
