<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_selected="true">
        <layer-list>
            <!-- Shadow layer for elevated appearance -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#2A000000" />
                </shape>
            </item>
            
            <!-- Glowing outline -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#FF1C1C1C" />
                    <stroke android:width="2dp" android:color="#66FFFFFF" />
                </shape>
            </item>
            
            <!-- Main circular surface -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#FF1C1C1C" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow layer for 2dp elevation -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#1A000000" />
                </shape>
            </item>
            
            <!-- Main circular surface -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="oval">
                    <solid android:color="#FF2C2C2C" />
                    <stroke android:width="1dp" android:color="#FF3A3A3A" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <!-- Shadow layer for 2dp elevation -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#1A000000" />
                </shape>
            </item>
            
            <!-- Main circular surface -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="oval">
                    <solid android:color="#FF1C1C1C" />
                    <stroke android:width="1dp" android:color="#FF2A2A2A" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
