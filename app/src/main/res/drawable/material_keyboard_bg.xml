<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer for 4dp elevation feel -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A000000" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    
    <!-- Main surface with Material You dark background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF121212" />
            <stroke android:width="1dp" android:color="#FF2A2A2A" />
        </shape>
    </item>
    
</layer-list>
