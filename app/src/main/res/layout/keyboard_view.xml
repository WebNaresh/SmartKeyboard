<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF202124">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Toolbar with Pill Mood Selector -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FF2A2D3A"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Left side: Mood selector pill -->
            <LinearLayout
                android:id="@+id/mood_selector_pill"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/mood_pill_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/mood_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#FFFFFF" />

            </LinearLayout>

            <!-- Right side: Blue circular enhance button -->
            <ImageButton
                android:id="@+id/btn_enhance_text"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/enhance_circle_bg"
                android:src="@drawable/ic_enhance"
                android:scaleType="center"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Enhance Text"
                android:elevation="2dp" />

        </RelativeLayout>

        <!-- Main Keyboard View (Google Style) -->
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF202124"
            android:keyBackground="@drawable/google_key_bg"
            android:keyTextColor="#FFFFFF"
            android:keyTextSize="16sp"
            android:keyPreviewLayout="@layout/key_preview"
            android:keyPreviewOffset="-10dp"
            android:keyPreviewHeight="60dp"
            android:paddingHorizontal="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

    </LinearLayout>

    <!-- Floating Mood Selection Menu (Overlay) -->
    <LinearLayout
        android:id="@+id/mood_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mood_menu_bg"
        android:paddingVertical="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:visibility="gone"
        android:elevation="12dp">

        <LinearLayout
            android:id="@+id/btn_respectful"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/mood_item_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Respectful"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="none" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_funny"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/mood_item_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Funny"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="none" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_angry"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/mood_item_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜ "
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Angry"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="none" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
