<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF2C2C2C">

    <!-- Mood Toggle Buttons -->
    <LinearLayout
        android:id="@+id/mood_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_respectful"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Respectful"
            android:textSize="10sp"
            android:background="@drawable/key_bg"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_funny"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Funny"
            android:textSize="10sp"
            android:background="@drawable/key_bg"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_angry"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Angry"
            android:textSize="10sp"
            android:background="@drawable/key_bg"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_toggle_mood"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:text="ðŸŽ­"
            android:textSize="12sp"
            android:background="@drawable/key_bg"
            android:textColor="#FFFFFF"
            android:minWidth="40dp" />

        <Button
            android:id="@+id/btn_ai_toggle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:text="ðŸ¤–"
            android:textSize="12sp"
            android:background="@drawable/key_bg"
            android:textColor="#FFFFFF"
            android:minWidth="40dp" />

    </LinearLayout>

    <!-- Main Keyboard View -->
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF2C2C2C"
        android:keyBackground="@drawable/key_bg"
        android:keyTextColor="#FFFFFF"
        android:keyTextSize="18sp"
        android:keyPreviewLayout="@layout/key_preview"
        android:keyPreviewOffset="0dp"
        android:keyPreviewHeight="80dp" />

</LinearLayout>
